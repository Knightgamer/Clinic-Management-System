<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Doctor's Office</title>
  </head>
  <body class="bg-gray-800 text-gray-300">

    <nav class="bg-gray-900 px-4 py-4 shadow-md">
      <div class="container mx-auto flex justify-between items-center">
        <a href="#" class="flex items-center">
          <img
            src="../public/imgs/logo.svg"
            alt="logo"
            class="h-10 w-10 mr-2"
          />
          <span class="font-semibold text-xl tracking-tight text-gray-300">PSM
            PHARMACEUTICALS</span>
        </a>
        <form action="/logout" method="GET">
          <button
            type="submit"
            class="bg-gray-700 text-gray-300 px-3 py-2 rounded hover:bg-gray-600"
          >Logout</button>
        </form>
      </div>
    </nav>

    <div class="container mx-auto my-8">
      <div class="flex flex-col md:flex-row justify-between items-center mb-6">
        <h1 class="text-2xl font-semibold text-gray-300 mb-2 md:mb-0">Welcome,
          Dr.
          {{user.name}}</h1>
        <h6 class="text-base text-gray-500">Today's Date: {{todaysDate}}</h6>
      </div>

      <div class="bg-gray-700 shadow-md rounded my-6">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-600">
          <h3 class="text-lg leading-6 font-medium text-gray-300">Patient List</h3>
        </div>
        <table class="min-w-full divide-y divide-gray-600">
          <thead class="bg-gray-800">
            <tr>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
              >Name</th>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
              >Age</th>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
              >Gender</th>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
              >Contact</th>
              <th
                class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider"
              >Action</th>
            </tr>
          </thead>
          <tbody class="bg-gray-800 divide-y divide-gray-700">
            {{#each Patients}}
              <tr>
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"
                >{{patientName}}</td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"
                >{{patientAge}}</td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"
                >{{sex}}</td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm text-gray-300"
                >{{phone}}</td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium"
                >
                  <form action="patients/{{patientID}}" method="POST">
                    <button
                      type="submit"
                      class="bg-blue-600 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded"
                    >View</button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

  </body>
</html>